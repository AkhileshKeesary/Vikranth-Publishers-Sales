<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E3F2FD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.KAC.vikranthpublications.view.fragments.AttendanceFragment"
    android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:padding="6dp"
            app:cardCornerRadius="12dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/fullnameTxt"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Full Name"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/employeeIDTxt"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Emp Id"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:padding="6dp"
            app:cardCornerRadius="12dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_date_textview"
                    android:textStyle="bold"
                    android:layout_margin="12dp"
                    android:text="00-00-00000"
                    android:id="@+id/dateTextView"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@null"
                        android:enabled="false"
                        android:layout_margin="12dp"
                        android:background="@drawable/button_background_style"
                        android:text="Login"
                        android:padding="16dp"
                        android:id="@+id/attendanceLoginButton"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:backgroundTint="@null"
                        android:enabled="false"
                        android:background="@drawable/button_background_style"
                        android:text="Logout"
                        android:padding="16dp"
                        android:id="@+id/attendanceLogoutButton"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/statusCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:padding="6dp"
            app:cardCornerRadius="12dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_date_textview"
                    android:textStyle="bold"
                    android:layout_margin="12dp"
                    android:id="@+id/logintimeTextView"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_date_textview"
                    android:textStyle="bold"
                    android:layout_margin="12dp"
                    android:id="@+id/logoutTimeTextView"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


</LinearLayout>
